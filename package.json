{
  "name": "vscode-twse-monitor",
  "displayName": "TWSE - Taiwan stock monitor",
  "description": "",
  "icon": "media/extensionIcon/stock.png",
  "version": "0.2.1",
  "publisher": "pinshengjuan",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "台股",
    "Taiwan",
    "股票",
    "stock",
    "twse"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pinshengjuan/vscode-twse-monitor"
  },
  "activationEvents": [
    "onView:twse-monitor",
    "onCommand:twse-monitor.add",
    "onCommand:twse-monitor.item.remove"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "TWSE - Taiwan stock monitor",
      "properties": {
        "twse-monitor.watchingList": {
          "type": "object",
          "default": {},
          "description": "your watching list"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "twse-monitor",
          "name": "Where my money goes"
        }
      ]
    },
    "commands": [
      {
        "command": "twse-monitor.add",
        "title": "add",
        "icon": {
          "light": "media/treeViewIcon/addLight.svg",
          "dark": "media/treeViewIcon/addDark.svg"
        }
      },
      {
        "command": "twse-monitor.item.remove",
        "title": "remove"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "twse-monitor.add",
          "when": "view == twse-monitor",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "twse-monitor.item.remove",
          "when": "view == twse-monitor"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {}
}
